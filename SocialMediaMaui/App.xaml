<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="SocialMediaMaui.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:SocialMediaMaui.Controls"
    xmlns:local="clr-namespace:SocialMediaMaui">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />

                <ResourceDictionary>
                    <Style x:Key="roundedButton" TargetType="Button">
                        <Setter Property="CornerRadius" Value="20" />
                    </Style>

                    <Style x:Key="formLabel" TargetType="Label">
                        <Setter Property="FontAttributes" Value="Bold" />
                    </Style>

                    <Style x:Key="fadedLine" TargetType="BoxView">
                        <Setter Property="HeightRequest" Value="1" />
                        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
                        <Setter Property="Opacity" Value="0.2" />
                    </Style>

                    <Style TargetType="controls:NoBorderEntry">
                        <Setter Property="BackgroundColor" Value="LightGoldenrodYellow" />
                    </Style>

                </ResourceDictionary>


            </ResourceDictionary.MergedDictionaries>



        </ResourceDictionary>

    </Application.Resources>
</Application>
