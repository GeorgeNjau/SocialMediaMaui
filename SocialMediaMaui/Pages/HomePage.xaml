<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SocialMediaMaui.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:SocialMediaMaui.Controls"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    BackgroundColor="{StaticResource Gray100}">

    <Shell.TitleView>
        <Grid ColumnDefinitions="Auto, *, Auto">
            <Label
                Grid.Column="0"
                FontAttributes="Bold"
                FontSize="25"
                Text="Maui Social"
                TextColor="White"
                VerticalOptions="Center" />

            <Grid
                Grid.Column="2"
                Margin="0,0,15,0"
                ColumnDefinitions="*,*,*"
                ColumnSpacing="20"
                VerticalOptions="Center">

                <controls:WhiteImage
                    x:Name="newPostImage"
                    HeightRequest="20"
                    Source="plus.png"
                    WidthRequest="20">
                    <controls:WhiteImage.GestureRecognizers>
                        <TapGestureRecognizer Tapped="NewPostImage_Tapped" />
                    </controls:WhiteImage.GestureRecognizers>
                </controls:WhiteImage>

                <Grid Grid.Column="1">
                    <controls:WhiteImage
                        x:Name="notifyImage"
                        HeightRequest="20"
                        Source="bell.png"
                        WidthRequest="20">
                        <controls:WhiteImage.GestureRecognizers>
                            <TapGestureRecognizer Tapped="GoToNotificationPage_Tapped" />
                        </controls:WhiteImage.GestureRecognizers>
                    </controls:WhiteImage>

                    <Ellipse
                        Fill="Black"
                        HeightRequest="10"
                        HorizontalOptions="End"
                        VerticalOptions="Start"
                        WidthRequest="10" />

                </Grid>

                <controls:WhiteImage
                    Grid.Column="2"
                    HeightRequest="20"
                    Source="user.png"
                    WidthRequest="20">
                    <controls:WhiteImage.GestureRecognizers>
                        <TapGestureRecognizer Tapped="GoToProfilePage_Tapped" />
                    </controls:WhiteImage.GestureRecognizers>
                </controls:WhiteImage>

            </Grid>

        </Grid>
    </Shell.TitleView>
    <Grid>
        <ScrollView>

            <VerticalStackLayout Spacing="15">

                <Border Padding="8" BackgroundColor="White">

                    <Grid RowDefinitions="Auto, 250, Auto, Auto" RowSpacing="8">

                        <Grid ColumnDefinitions="40, Auto, *">

                            <Grid ColumnDefinitions="40, Auto, *" ColumnSpacing="5">
                                <Border
                                    Grid.Column="0"
                                    BackgroundColor="LightGoldenrodYellow"
                                    HeightRequest="40"
                                    StrokeShape="RoundRectangle 20"
                                    WidthRequest="40">
                                    <Image
                                        Aspect="AspectFill"
                                        HeightRequest="30"
                                        HorizontalOptions="Center"
                                        Source="user.png"
                                        VerticalOptions="Center"
                                        WidthRequest="30" />
                                </Border>

                                <Grid
                                    Grid.Column="1"
                                    ColumnDefinitions="Auto, Auto, Auto"
                                    ColumnSpacing="5"
                                    VerticalOptions="Center">
                                    <Label
                                        Grid.Column="0"
                                        FontAttributes="Bold"
                                        Text="George Njau" />
                                    <Label
                                        Grid.Column="1"
                                        Margin="0,-7,0,0"
                                        FontAttributes="Bold"
                                        FontSize="14"
                                        Text="."
                                        VerticalOptions="Center" />
                                    <Label
                                        Grid.Column="2"
                                        FontSize="12"
                                        Text="2025 Jan 26"
                                        VerticalOptions="Center" />
                                </Grid>

                            </Grid>

                        </Grid>

                        <Border
                            Grid.Row="1"
                            BackgroundColor="LightSalmon"
                            HeightRequest="250"
                            StrokeThickness="0">

                            <Image
                                Aspect="Center"
                                HeightRequest="250"
                                Source="bird.png" />

                        </Border>

                        <Label
                            Grid.Row="2"
                            FontSize="15"
                            Text="This is a bird"
                            TextColor="{StaticResource Gray900}" />

                        <VerticalStackLayout Grid.Row="3" Spacing="10">

                            <BoxView Style="{StaticResource fadedLine}" />

                            <FlexLayout JustifyContent="SpaceAround">
                                <HorizontalStackLayout Spacing="2">

                                    <controls:PrimaryColorImage
                                        HeightRequest="20"
                                        Source="heart.png"
                                        VerticalOptions="Center"
                                        WidthRequest="20" />

                                    <Label
                                        FontSize="12"
                                        Text="Like"
                                        VerticalOptions="Center" />

                                </HorizontalStackLayout>

                                <HorizontalStackLayout Spacing="2">

                                    <controls:PrimaryColorImage
                                        HeightRequest="20"
                                        Source="comment.png"
                                        VerticalOptions="Center"
                                        WidthRequest="20" />

                                    <Label
                                        FontSize="12"
                                        Text="Comment"
                                        VerticalOptions="Center" />

                                </HorizontalStackLayout>

                                <HorizontalStackLayout Spacing="2">

                                    <controls:PrimaryColorImage
                                        HeightRequest="20"
                                        Source="bookmark.png"
                                        VerticalOptions="Center"
                                        WidthRequest="20" />

                                    <Label
                                        FontSize="12"
                                        Text="Save"
                                        VerticalOptions="Center" />

                                </HorizontalStackLayout>

                                <HorizontalStackLayout Spacing="2">

                                    <controls:PrimaryColorImage
                                        HeightRequest="20"
                                        Source="share.png"
                                        VerticalOptions="Center"
                                        WidthRequest="20" />

                                    <Label
                                        FontSize="12"
                                        Text="Share"
                                        VerticalOptions="Center" />

                                </HorizontalStackLayout>
                            </FlexLayout>
                        </VerticalStackLayout>

                    </Grid>

                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                    </Border.GestureRecognizers>

                </Border>

                <Border Padding="8" BackgroundColor="White">

                    <Grid RowDefinitions="Auto, 250, Auto, Auto" RowSpacing="8">

                        <Grid ColumnDefinitions="40, Auto, *">

                            <Grid ColumnDefinitions="40, Auto, *" ColumnSpacing="5">
                                <Border
                                    Grid.Column="0"
                                    BackgroundColor="LightGoldenrodYellow"
                                    HeightRequest="40"
                                    StrokeShape="RoundRectangle 20"
                                    WidthRequest="40">
                                    <Image
                                        Aspect="AspectFill"
                                        HeightRequest="30"
                                        HorizontalOptions="Center"
                                        Source="user.png"
                                        VerticalOptions="Center"
                                        WidthRequest="30" />
                                </Border>

                                <Grid
                                    Grid.Column="1"
                                    ColumnDefinitions="Auto, Auto, Auto"
                                    ColumnSpacing="5"
                                    VerticalOptions="Center">
                                    <Label
                                        Grid.Column="0"
                                        FontAttributes="Bold"
                                        Text="George Njau" />
                                    <Label
                                        Grid.Column="1"
                                        Margin="0,-7,0,0"
                                        FontAttributes="Bold"
                                        FontSize="14"
                                        Text="."
                                        VerticalOptions="Center" />
                                    <Label
                                        Grid.Column="2"
                                        FontSize="12"
                                        Text="2025 Jan 26"
                                        VerticalOptions="Center" />
                                </Grid>

                            </Grid>

                        </Grid>

                        <Border
                            Grid.Row="1"
                            BackgroundColor="LightSalmon"
                            HeightRequest="250"
                            StrokeThickness="0">

                            <Image
                                Aspect="Center"
                                HeightRequest="250"
                                Source="fantasy.png" />

                        </Border>

                        <Label
                            Grid.Row="2"
                            FontSize="15"
                            Text="Fantasy World"
                            TextColor="{StaticResource Gray900}" />

                        <VerticalStackLayout Grid.Row="3" Spacing="10">

                            <BoxView Style="{StaticResource fadedLine}" />

                            <FlexLayout JustifyContent="SpaceAround">
                                <HorizontalStackLayout Spacing="2">

                                    <controls:PrimaryColorImage
                                        HeightRequest="20"
                                        Source="heart.png"
                                        VerticalOptions="Center"
                                        WidthRequest="20" />

                                    <Label
                                        FontSize="12"
                                        Text="Like"
                                        VerticalOptions="Center" />

                                </HorizontalStackLayout>

                                <HorizontalStackLayout Spacing="2">

                                    <controls:PrimaryColorImage
                                        HeightRequest="20"
                                        Source="comment.png"
                                        VerticalOptions="Center"
                                        WidthRequest="20" />

                                    <Label
                                        FontSize="12"
                                        Text="Comment"
                                        VerticalOptions="Center" />

                                </HorizontalStackLayout>

                                <HorizontalStackLayout Spacing="2">

                                    <controls:PrimaryColorImage
                                        HeightRequest="20"
                                        Source="bookmark.png"
                                        VerticalOptions="Center"
                                        WidthRequest="20" />

                                    <Label
                                        FontSize="12"
                                        Text="Save"
                                        VerticalOptions="Center" />

                                </HorizontalStackLayout>

                                <HorizontalStackLayout Spacing="2">

                                    <controls:PrimaryColorImage
                                        HeightRequest="20"
                                        Source="share.png"
                                        VerticalOptions="Center"
                                        WidthRequest="20" />

                                    <Label
                                        FontSize="12"
                                        Text="Share"
                                        VerticalOptions="Center" />

                                </HorizontalStackLayout>
                            </FlexLayout>
                        </VerticalStackLayout>

                    </Grid>

                </Border>

                <Border Padding="8" BackgroundColor="White">

                    <Grid RowDefinitions="Auto, 250, Auto, Auto" RowSpacing="8">

                        <Grid ColumnDefinitions="40, Auto, *">

                            <Grid ColumnDefinitions="40, Auto, *" ColumnSpacing="5">
                                <Border
                                    Grid.Column="0"
                                    BackgroundColor="LightGoldenrodYellow"
                                    HeightRequest="40"
                                    StrokeShape="RoundRectangle 20"
                                    WidthRequest="40">
                                    <Image
                                        Aspect="AspectFill"
                                        HeightRequest="30"
                                        HorizontalOptions="Center"
                                        Source="user.png"
                                        VerticalOptions="Center"
                                        WidthRequest="30" />
                                </Border>

                                <Grid
                                    Grid.Column="1"
                                    ColumnDefinitions="Auto, Auto, Auto"
                                    ColumnSpacing="5"
                                    VerticalOptions="Center">
                                    <Label
                                        Grid.Column="0"
                                        FontAttributes="Bold"
                                        Text="George Njau" />
                                    <Label
                                        Grid.Column="1"
                                        Margin="0,-7,0,0"
                                        FontAttributes="Bold"
                                        FontSize="14"
                                        Text="."
                                        VerticalOptions="Center" />
                                    <Label
                                        Grid.Column="2"
                                        FontSize="12"
                                        Text="2025 Jan 26"
                                        VerticalOptions="Center" />
                                </Grid>

                            </Grid>

                        </Grid>

                        <Border
                            Grid.Row="1"
                            BackgroundColor="LightSalmon"
                            HeightRequest="250"
                            StrokeThickness="0">

                            <Image
                                Aspect="Center"
                                HeightRequest="250"
                                Source="job.png" />

                        </Border>

                        <Label
                            Grid.Row="2"
                            FontSize="15"
                            Text="Working hard"
                            TextColor="{StaticResource Gray900}" />

                        <VerticalStackLayout Grid.Row="3" Spacing="10">

                            <BoxView Style="{StaticResource fadedLine}" />

                            <FlexLayout JustifyContent="SpaceAround">
                                <HorizontalStackLayout Spacing="2">

                                    <controls:PrimaryColorImage
                                        HeightRequest="20"
                                        Source="heart.png"
                                        VerticalOptions="Center"
                                        WidthRequest="20" />

                                    <Label
                                        FontSize="12"
                                        Text="Like"
                                        VerticalOptions="Center" />

                                </HorizontalStackLayout>

                                <HorizontalStackLayout Spacing="2">

                                    <controls:PrimaryColorImage
                                        HeightRequest="20"
                                        Source="comment.png"
                                        VerticalOptions="Center"
                                        WidthRequest="20" />

                                    <Label
                                        FontSize="12"
                                        Text="Comment"
                                        VerticalOptions="Center" />

                                </HorizontalStackLayout>

                                <HorizontalStackLayout Spacing="2">

                                    <controls:PrimaryColorImage
                                        HeightRequest="20"
                                        Source="bookmark.png"
                                        VerticalOptions="Center"
                                        WidthRequest="20" />

                                    <Label
                                        FontSize="12"
                                        Text="Save"
                                        VerticalOptions="Center" />

                                </HorizontalStackLayout>

                                <HorizontalStackLayout Spacing="2">

                                    <controls:PrimaryColorImage
                                        HeightRequest="20"
                                        Source="share.png"
                                        VerticalOptions="Center"
                                        WidthRequest="20" />

                                    <Label
                                        FontSize="12"
                                        Text="Share"
                                        VerticalOptions="Center" />

                                </HorizontalStackLayout>
                            </FlexLayout>
                        </VerticalStackLayout>

                    </Grid>

                </Border>

            </VerticalStackLayout>

        </ScrollView>

        <Border
            x:Name="floatingButton"
            Margin="0,5"
            BackgroundColor="{StaticResource Primary}"
            HeightRequest="45"
            HorizontalOptions="Center"
            StrokeShape="RoundRectangle 10"
            StrokeThickness="0"
            VerticalOptions="End"
            WidthRequest="45">

            <controls:WhiteImage
                HeightRequest="24"
                Source="plus_fab.png"
                WidthRequest="24" />

            <Border.Shadow>
                <Shadow Brush="Black" Radius="25" />
            </Border.Shadow>

            <Border.Background>
                <LinearGradientBrush EndPoint="0.5, 1">
                    <GradientStop Offset="0.1" Color="{StaticResource Primary}" />
                    <GradientStop Offset="1.0" Color="{StaticResource PrimaryDark}" />
                </LinearGradientBrush>
            </Border.Background>

        </Border>


    </Grid>

</ContentPage>
