<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SocialMediaMaui.Pages.PostDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:SocialMediaMaui.Controls"
    BackgroundColor="{StaticResource Gray100}"
    Shell.PresentationMode="ModalAnimated">

    <Grid RowDefinitions="Auto, *, Auto">

        <Grid
            Grid.Row="0"
            Padding="15"
            BackgroundColor="{StaticResource Primary}"
            ColumnDefinitions="Auto, *, Auto, Auto"
            ColumnSpacing="10">
            <Border
                Grid.Column="0"
                BackgroundColor="White"
                HeightRequest="30"
                StrokeShape="RoundRectangle 8"
                WidthRequest="30">
                <Image
                    HeightRequest="24"
                    HorizontalOptions="Center"
                    Source="x.png"
                    VerticalOptions="Center"
                    WidthRequest="24" />

                <Border.Shadow>
                    <Shadow Brush="Gray" Radius="10" />
                </Border.Shadow>

            </Border>

            <Border
                Grid.Column="2"
                BackgroundColor="White"
                HeightRequest="30"
                StrokeShape="RoundRectangle 8"
                WidthRequest="30">
                <Image
                    HeightRequest="18"
                    HorizontalOptions="Center"
                    Source="pencil.png"
                    VerticalOptions="Center"
                    WidthRequest="18" />

                <Border.Shadow>
                    <Shadow Brush="Gray" Radius="10" />
                </Border.Shadow>

            </Border>

            <Border
                Grid.Column="3"
                BackgroundColor="White"
                HeightRequest="30"
                StrokeShape="RoundRectangle 8"
                WidthRequest="30">
                <Image
                    HeightRequest="18"
                    HorizontalOptions="Center"
                    Source="trash.png"
                    VerticalOptions="Center"
                    WidthRequest="18" />

                <Border.Shadow>
                    <Shadow Brush="Gray" Radius="10" />
                </Border.Shadow>

            </Border>




        </Grid>

        <ScrollView Grid.Row="1">
            <Grid RowDefinitions="Auto, *" RowSpacing="10">

                <Border Padding="8" BackgroundColor="White">

                    <Grid RowDefinitions="Auto, 250, Auto, Auto" RowSpacing="8">

                        <Grid ColumnDefinitions="40, Auto, *">

                            <Grid ColumnDefinitions="40, Auto, *" ColumnSpacing="5">
                                <Border
                                    Grid.Column="0"
                                    BackgroundColor="LightGoldenrodYellow"
                                    HeightRequest="40"
                                    StrokeShape="RoundRectangle 20"
                                    WidthRequest="40">
                                    <Image
                                        Aspect="AspectFill"
                                        HeightRequest="30"
                                        HorizontalOptions="Center"
                                        Source="user.png"
                                        VerticalOptions="Center"
                                        WidthRequest="30" />
                                </Border>

                                <Grid
                                    Grid.Column="1"
                                    ColumnDefinitions="Auto, Auto, Auto"
                                    ColumnSpacing="5"
                                    VerticalOptions="Center">
                                    <Label
                                        Grid.Column="0"
                                        FontAttributes="Bold"
                                        Text="George Njau" />
                                    <Label
                                        Grid.Column="1"
                                        Margin="0,-7,0,0"
                                        FontAttributes="Bold"
                                        FontSize="14"
                                        Text="."
                                        VerticalOptions="Center" />
                                    <Label
                                        Grid.Column="2"
                                        FontSize="12"
                                        Text="2025 Jan 26"
                                        VerticalOptions="Center" />
                                </Grid>

                            </Grid>

                        </Grid>

                        <Border
                            Grid.Row="1"
                            BackgroundColor="LightSalmon"
                            HeightRequest="250"
                            StrokeThickness="0">

                            <Image
                                Aspect="Center"
                                HeightRequest="250"
                                Source="bird.png" />

                        </Border>

                        <Label
                            Grid.Row="2"
                            FontSize="15"
                            Text="This is a bird"
                            TextColor="{StaticResource Gray900}" />

                        <VerticalStackLayout Grid.Row="3" Spacing="10">

                            <BoxView Style="{StaticResource fadedLine}" />

                            <FlexLayout JustifyContent="SpaceAround">
                                <HorizontalStackLayout Spacing="2">

                                    <controls:PrimaryColorImage
                                        HeightRequest="20"
                                        Source="heart.png"
                                        VerticalOptions="Center"
                                        WidthRequest="20" />

                                    <Label
                                        FontSize="12"
                                        Text="Like"
                                        VerticalOptions="Center" />

                                </HorizontalStackLayout>

                                <HorizontalStackLayout Spacing="2">

                                    <controls:PrimaryColorImage
                                        HeightRequest="20"
                                        Source="comment.png"
                                        VerticalOptions="Center"
                                        WidthRequest="20" />

                                    <Label
                                        FontSize="12"
                                        Text="Comment"
                                        VerticalOptions="Center" />

                                </HorizontalStackLayout>

                                <HorizontalStackLayout Spacing="2">

                                    <controls:PrimaryColorImage
                                        HeightRequest="20"
                                        Source="bookmark.png"
                                        VerticalOptions="Center"
                                        WidthRequest="20" />

                                    <Label
                                        FontSize="12"
                                        Text="Save"
                                        VerticalOptions="Center" />

                                </HorizontalStackLayout>

                                <HorizontalStackLayout Spacing="2">

                                    <controls:PrimaryColorImage
                                        HeightRequest="20"
                                        Source="share.png"
                                        VerticalOptions="Center"
                                        WidthRequest="20" />

                                    <Label
                                        FontSize="12"
                                        Text="Share"
                                        VerticalOptions="Center" />

                                </HorizontalStackLayout>
                            </FlexLayout>
                        </VerticalStackLayout>

                    </Grid>

                </Border>

                <VerticalStackLayout
                    x:Name="comments"
                    Grid.Row="1"
                    Padding="15,0"
                    Spacing="5">
                    <Grid ColumnDefinitions="40,*" ColumnSpacing="5">
                        <Border
                            Grid.Column="0"
                            BackgroundColor="LightGoldenrodYellow"
                            HeightRequest="40"
                            StrokeShape="RoundRectangle 20"
                            WidthRequest="40">
                            <Image
                                Aspect="AspectFill"
                                HeightRequest="30"
                                HorizontalOptions="Center"
                                Source="user.png"
                                VerticalOptions="Center"
                                WidthRequest="30" />
                        </Border>

                        <Grid
                            Grid.Column="1"
                            Padding="5"
                            BackgroundColor="White"
                            RowDefinitions="Auto,Auto"
                            RowSpacing="5">
                            <Grid
                                Grid.Row="0"
                                ColumnDefinitions="Auto, Auto, Auto"
                                ColumnSpacing="5"
                                VerticalOptions="Center">
                                <Label
                                    Grid.Column="0"
                                    FontAttributes="Bold"
                                    Text="George Njau" />
                                <Label
                                    Grid.Column="1"
                                    Margin="0,-7,0,0"
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    Text="."
                                    VerticalOptions="Center" />
                                <Label
                                    Grid.Column="2"
                                    FontSize="12"
                                    Text="2025 Jan 26"
                                    VerticalOptions="Center" />
                            </Grid>

                            <Label
                                Grid.Row="1"
                                Text="Comments text will go here."
                                TextColor="{StaticResource Gray900}" />

                        </Grid>

                    </Grid>

                    <Grid ColumnDefinitions="40,*" ColumnSpacing="5">
                        <Border
                            Grid.Column="0"
                            BackgroundColor="LightGoldenrodYellow"
                            HeightRequest="40"
                            StrokeShape="RoundRectangle 20"
                            WidthRequest="40">
                            <Image
                                Aspect="AspectFill"
                                HeightRequest="30"
                                HorizontalOptions="Center"
                                Source="user.png"
                                VerticalOptions="Center"
                                WidthRequest="30" />
                        </Border>

                        <Grid
                            Grid.Column="1"
                            Padding="5"
                            BackgroundColor="White"
                            RowDefinitions="Auto,Auto"
                            RowSpacing="5">
                            <Grid
                                Grid.Row="0"
                                ColumnDefinitions="Auto, Auto, Auto"
                                ColumnSpacing="5"
                                VerticalOptions="Center">
                                <Label
                                    Grid.Column="0"
                                    FontAttributes="Bold"
                                    Text="George Njau" />
                                <Label
                                    Grid.Column="1"
                                    Margin="0,-7,0,0"
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    Text="."
                                    VerticalOptions="Center" />
                                <Label
                                    Grid.Column="2"
                                    FontSize="12"
                                    Text="2025 Jan 26"
                                    VerticalOptions="Center" />
                            </Grid>

                            <Label
                                Grid.Row="1"
                                Text="Comments text will go here."
                                TextColor="{StaticResource Gray900}" />

                        </Grid>

                    </Grid>

                    <Grid ColumnDefinitions="40,*" ColumnSpacing="5">
                        <Border
                            Grid.Column="0"
                            BackgroundColor="LightGoldenrodYellow"
                            HeightRequest="40"
                            StrokeShape="RoundRectangle 20"
                            VerticalOptions="Start"
                            WidthRequest="40">
                            <Image
                                Aspect="AspectFill"
                                HeightRequest="30"
                                HorizontalOptions="Center"
                                Source="user.png"
                                VerticalOptions="Center"
                                WidthRequest="30" />
                        </Border>

                        <Grid
                            Grid.Column="1"
                            Padding="5"
                            BackgroundColor="White"
                            RowDefinitions="Auto,Auto"
                            RowSpacing="5">
                            <Grid
                                Grid.Row="0"
                                ColumnDefinitions="Auto, Auto, Auto"
                                ColumnSpacing="5"
                                VerticalOptions="Center">
                                <Label
                                    Grid.Column="0"
                                    FontAttributes="Bold"
                                    Text="George Njau" />
                                <Label
                                    Grid.Column="1"
                                    Margin="0,-7,0,0"
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    Text="."
                                    VerticalOptions="Center" />
                                <Label
                                    Grid.Column="2"
                                    FontSize="12"
                                    Text="2025 Jan 26"
                                    VerticalOptions="Center" />
                            </Grid>

                            <Label
                                Grid.Row="1"
                                Text="Comments text will go here. Comments text will go here. Comments text will go here. Comments text will go here. Comments text will go here. Comments text will go here."
                                TextColor="{StaticResource Gray900}" />

                        </Grid>

                    </Grid>

                    <Grid ColumnDefinitions="40,*" ColumnSpacing="5">
                        <Border
                            Grid.Column="0"
                            BackgroundColor="LightGoldenrodYellow"
                            HeightRequest="40"
                            StrokeShape="RoundRectangle 20"
                            VerticalOptions="Start"
                            WidthRequest="40">
                            <Image
                                Aspect="AspectFill"
                                HeightRequest="30"
                                HorizontalOptions="Center"
                                Source="user.png"
                                VerticalOptions="Center"
                                WidthRequest="30" />
                        </Border>

                        <Grid
                            Grid.Column="1"
                            Padding="5"
                            BackgroundColor="White"
                            RowDefinitions="Auto,Auto"
                            RowSpacing="5">
                            <Grid
                                Grid.Row="0"
                                ColumnDefinitions="Auto, Auto, Auto"
                                ColumnSpacing="5"
                                VerticalOptions="Center">
                                <Label
                                    Grid.Column="0"
                                    FontAttributes="Bold"
                                    Text="George Njau" />
                                <Label
                                    Grid.Column="1"
                                    Margin="0,-7,0,0"
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    Text="."
                                    VerticalOptions="Center" />
                                <Label
                                    Grid.Column="2"
                                    FontSize="12"
                                    Text="2025 Jan 26"
                                    VerticalOptions="Center" />
                            </Grid>

                            <Label
                                Grid.Row="1"
                                Text="Comments text will go here. Comments text will go here. Comments text will go here. Comments text will go here. Comments text will go here. Comments text will go here."
                                TextColor="{StaticResource Gray900}" />

                        </Grid>

                    </Grid>
                
                </VerticalStackLayout>

            </Grid>
        </ScrollView>

        <Grid
            Grid.Row="2"
            Padding="15,10,15,15"
            Background="White"
            ColumnDefinitions="*,Auto"
            ColumnSpacing="5">
            <controls:NoBorderEntry
                Grid.Column="0"
                Placeholder="Enter Comment..."
                PlaceholderColor="Black" />
            <Border
                Grid.Column="1"
                BackgroundColor="{StaticResource Primary}"
                HeightRequest="44"
                StrokeShape="RoundRectangle 8"
                WidthRequest="44">
                <controls:WhiteImage
                    HeightRequest="24"
                    Source="send.png"
                    WidthRequest="24" />
            </Border>
        </Grid>

    </Grid>

</ContentPage>